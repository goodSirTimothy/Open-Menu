<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.menuSpecials.EditMonthlySpecial">
   <center>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="Monthly Specials">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TableView fx:id="monthlyTable" VBox.vgrow="ALWAYS">
              <columns>
                  <TableColumn fx:id="colItemType" prefWidth="100.0" text="Item Type" />
                <TableColumn fx:id="colItemName" prefWidth="150.0" text="Item Name" />
                  <TableColumn fx:id="colDescription" prefWidth="500.0" text="Description" />
              </columns>
            </TableView>
         </children>
         <BorderPane.margin>
            <Insets left="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <right>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label />
            <Button mnemonicParsing="false" onAction="#addSpecialClicked" text="Add Monthly Special" />
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
